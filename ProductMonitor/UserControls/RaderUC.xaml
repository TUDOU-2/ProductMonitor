<UserControl x:Class="ProductMonitor.UserControls.RaderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductMonitor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="LayGrid">
        <Canvas x:Name="mainCanvas"/>
        <Polygon x:Name="P1" Stroke="Red" StrokeThickness="1"/>
        <Polygon x:Name="P2" Stroke="Blue" StrokeThickness="1"/>
        <Polygon x:Name="P3" Stroke="Green" StrokeThickness="1"/>
        <Polygon x:Name="P4" Stroke="#99ffffff" StrokeThickness="1"/>

        <Polygon x:Name="P5" Stroke="Orange" Fill="LightPink" StrokeThickness="1"/>
    </Grid>
</UserControl>
